import java.util.Scanner;

public class task2 {
    public static void main(String[] args) {
        Scanner scanner= new Scanner(System.in);
        System.out.println("\n Welcome to Our Number Guessing Game...!");
        int guesed=55;
        int guessTries=0;
        int shodh;
        while (true){
            System.out.print("\nGuess the Number Bet^n 1 to 100 : ");
            shodh= scanner.nextInt();
            guessTries++;
            if(shodh==guesed){
                System.out.println("You Win!!");
                System.out.println("the no was "+ guesed);
                System.out.println("You took "+ guessTries+" tries");
            }
            else if(shodh<guesed){
                System.out.println("Your No is low pls increase your Number .!");
            }
            else if (shodh>guesed){
                System.out.println("Your No is High pls decrease your Expectation");
            }

        }
    }
}
